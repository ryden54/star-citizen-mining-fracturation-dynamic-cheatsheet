{
  "name": "star-citizen-mining-calculator",
  "version": "1.0.0",
  "description": "Cooperative mining calculator for Star Citizen 4.0+",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --coverage --reporter=default --reporter=junit --outputFile.junit=reports/vitest-report.xml",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "npm run test:e2e && node scripts/coverage-e2e.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "playwright install --with-deps",
    "coverage": "npm run test:unit && npm run test:e2e:coverage"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@vitest/coverage-istanbul": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "glob": "^11.1.0",
    "happy-dom": "^20.0.10",
    "monocart-coverage-reports": "^2.12.9",
    "vitest": "^4.0.8"
  }
}
